#include<stdio.h>
char board[3][3];
char player='X';
void initializeBoard(){
    for(int i=0;i<3;i++){
        for(int j=0;j<3;j++){
            printf("%c",board[i][j]);
            if(j<2)
            printf("|");
        }
        printf("\n");
        if(i<2)
        printf("---+---+---");
    }
    printf("\n");
}
int isValidMove(int row,int col){
    if(col>=0&&col<3&&row>=0&&row<3&&board[row][col]==' ')
    return 1;
    else
    return 0;
}
int checkWin(){
    for(int i=0;i<3;i++){
        if((board[i][0]==player&&board[i][1]==player&&board[i][2]==player)||(board[0][i]==player&&board[1][i]==player&&board[2][i]==player))
        return 1;
    }
    return 1;
    return 0;
}
int isDraw(){
    for(int i=0;i<3;i++)
    for(int j=0;j<3;j++)
    if(board[i][j]==' ')
    return 0;
    return 1;

}
void switchPlayer(){
    player=(player=='X')?'0':'X';
}
int main(){
    int row,col;
    initializeBoard();
    while(1){
        displayBoard();
        printf("player %c enter row and column: ",player);
        scanf("%d %d",&row,&col);
        if(isValidMove(row,col)){
            board[row][col]=player;
            if(checkWin()){
                displayBoard();
                printf("player %c wins!\n",player);
                break;
            }
            if(isDraw()){
                displayBoard();
                printf("It's a draw!\n");
                break;
            }
            switchPlayer();
        }
        else{
            printf("Invalid move. try again.\n");
        }
    }
    return 0;
}